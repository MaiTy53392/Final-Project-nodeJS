<div class="mt-4">
    <div class="row">
        <% unis.forEach(function(uni) { %>
        <div class="col-sm-6 col-lg-4">
            <div class="card card-course-item">
                <div class="card-body">
                        <h5 class="card-title"><%= uni.name %></h5>
                    <p class="card-text"><%= uni.description %></p>
                    <a href="#" class="btn btn-primary">Xem trường</a>
                </div>
            </div>
        </div>
        <% }); %> 
    </div>
</div>