<div class="wrapper">
  <div class="logo">
    <img src="/images/logo.svg" alt="">
  </div>
  <div class="text-center mt-4 name">
    {{#if success_msg}}
    <p class="alert alert-danger alert-dismissible fade show" role="alert" style="font-size: 12px;">{{success_msg}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    {{else if error}}
    <p class="alert alert-danger alert-dismissible fade show" role="alert" style="font-size: 12px;">{{error}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    {{else if error_msg}}
    <p class="alert alert-danger alert-dismissible fade show" role="alert" style="font-size: 12px;">{{error_msg}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    {{else}}
      Đăng nhập
    {{/if}}
  </div>
  <form class="p-3 mt-3" action="/user/toLogin" method="POST">
    <div class="form-field d-flex align-items-center">
      <i class='bx bx-envelope bx-sm'></i>
      <input type="mail" name="email" id="email" placeholder="Email">
    </div>
    <div class="form-field d-flex align-items-center">
      <i class='bx bxs-key bx-sm'></i>
      <input type="password" name="password" id="pwd" placeholder="Password">
    </div>
    <button class="btn mt-3" type="submit">Đăng nhập</button>
  </form>
  <div class="text-center fs-6 pe-3">
    <a href="#">Quên mật khẩu?</a> | <a href="/user/signup">Đăng ký</a>
  </div>
</div>