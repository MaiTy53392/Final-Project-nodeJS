<div class="banner-wrapper bg-light">
    <div id="index_banner" class="banner-vertical-center-index container-fluid px-0">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                {{#each universitys}}
                <div class="carousel-item pt-5" style="background-image: url('/images/{{getFirstItem this.image}}');" >
                    <div class="py-5 row d-flex align-items-center">
                        <div class="banner-content col-lg-9 col-9 offset-2 m-lg-auto text-center py-5 pb-5">
                            <h1
                                class="banner-heading h1 text-white display-3 mb-0 pb-5 mx-0 px-0 light-300">
                                {{capitalize this.name}}
                            </h1>
                            <a class="banner-button btn rounded-pill btn-outline-primary btn-lg px-4"
                                href="/university/{{this.slug}}" role="button">Xem đánh giá</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            <a class="carousel-control-prev text-decoration-none" href="#carouselExampleIndicators" role="button"
                data-bs-slide="prev">
                <i class="bx bx-chevron-left"></i>
                <span class="visually-hidden">Lùi lại</span>
            </a>
            <a class="carousel-control-next text-decoration-none" href="#carouselExampleIndicators" role="button"
                data-bs-slide="next">
                <i class="bx bx-chevron-right"></i>
                <span class="visually-hidden">Tiến tới</span>
            </a>
        </div>
    </div>
</div>
<script>
    function addActiveClass() {
        let element = document.querySelector('.carousel-item');
        element.classList.add("active");
    }
    addActiveClass();
</script>