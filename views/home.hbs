<body>
    {{> slider}}
        <section class="py-5 mb-5" id="products">
            <div class="container">
                <div class="row gy-5 g-lg-5 mb-4">
                    {{#each universitys}}
                        <div class="col-md-4 mb-3">
                            <a href="./university/{{this.slug}}"
                                class="recent-work card border-0 shadow-lg overflow-hidden">
                                <img class="recent-work-img card-img" src="{{this.image}}" alt="Card image" />
                                <div class="recent-work-vertical card-img-overlay d-flex align-items-end">
                                    <div class="recent-work-content text-start mb-3 ml-3 text-dark">
                                        <h3 class="card-title light-300">
                                            {{this.name}}
                                        </h3>
                                        <p class="card-text block text-truncate" style="max-width: 350px;">
                                            {{this.description}}
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {{/each}}
                </div>
            </div>
        </section>
</body>